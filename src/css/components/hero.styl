//
// Homepage Hero section
//

.hero
  position: relative
  display: none
  flex-direction: column
  align-items: flex-start
  height: calc(100vh - 64px)
  padding-top: 15vh

.hero__logo
  width: 500px
  max-width: 50%

.hero__title
  font-size: 40px
  font-weight: 200
  margin-bottom: 20px

.hero__canvas
  position: absolute
  bottom: 0
  left: 50%
  z-index: -1
  transform: translateX(-50%)
  display: block


@media (min-width: 960px)
  .hero
    display: flex

